---
import Home from "../components/home.astro";
import Nav from "../components/nav.astro";
import Terminal from "../components/terminal.astro";
import Layout from "../layouts/Layout.astro";
---

<Layout title="Miniverse - Arduino Serial Terminal">
  <Nav />
  <main class="main-content">
    <section class="hero">
      <h1>ðŸŒŒ Miniverse</h1>
      <p>Arduino Serial Communication Terminal</p>
    </section>
    
    <section class="terminal-section">
      <Terminal />
    </section>
    
    <section class="info-section">
      <Home />
    </section>
  </main>
</Layout>

<style>
  .main-content {
    max-width: 1200px;
    margin: 0 auto;
    padding: 20px;
  }

  .hero {
    text-align: center;
    margin-bottom: 40px;
    padding: 40px 0;
    background: linear-gradient(135deg, #1e3c72 0%, #2a5298 100%);
    border-radius: 12px;
    color: white;
  }

  .hero h1 {
    font-size: 3rem;
    margin: 0 0 10px 0;
    font-weight: 700;
  }

  .hero p {
    font-size: 1.2rem;
    margin: 0;
    opacity: 0.9;
  }

  .terminal-section {
    margin-bottom: 40px;
  }

  .info-section {
    margin-top: 40px;
  }

  @media (max-width: 768px) {
    .main-content {
      padding: 10px;
    }

    .hero h1 {
      font-size: 2rem;
    }

    .hero p {
      font-size: 1rem;
    }

    .hero {
      padding: 20px 0;
      margin-bottom: 20px;
    }
  }
</style>